<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlayout"
        tools:context="com.example.filip.dajsve.Activities.MainActivity">



        <android.support.v7.widget.Toolbar
            android:id="@+id/moj_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="#5D008C"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/dajsvebijeli"
                android:layout_marginRight="20dp"/>

        </android.support.v7.widget.Toolbar>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:id="@+id/navigacija_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#9879A8">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#A584B8"
                android:id="@+id/searchview"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/gradovi_spinner"

                android:layout_marginTop="64dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:backgroundTint="#FFFFFF"/>


        </RelativeLayout>


        <ListView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_gravity="left"
            android:id="@+id/listview"
            android:background="#FFFFFF"
            android:paddingTop="25dp"
            android:textAlignment="center">


        </ListView>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>