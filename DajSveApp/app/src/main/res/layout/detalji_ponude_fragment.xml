<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ponuda_image"
        android:layout_height="95dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/ponuda_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textIsSelectable="false"
        tools:text="Naziv ponude"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/ponuda_image"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ponuda_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textIsSelectable="false"
        tools:text="Opis ponude"
        android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Info"
        android:layout_below="@+id/ponuda_name"
        android:layout_alignStart="@+id/ponuda_name"
        android:layout_alignEnd="@+id/ponuda_name" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ponuda_description"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/ponuda_cijena" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ponuda_cijena"
        android:layout_centerHorizontal="true"
        android:id="@+id/ponuda_popust" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ponuda_popust"
        android:layout_alignParentEnd="true"
        android:id="@+id/ponuda_original" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/ponuda_datum"
        android:layout_below="@+id/ponuda_cijena"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ponuda_datum"
        android:layout_alignParentEnd="true"
        android:id="@+id/ponuda_usteda" />
</RelativeLayout>